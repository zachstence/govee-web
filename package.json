{
  "name": "@zachstence/govee-web",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "env-cmd svelte-kit dev",
    "build": "rimraf build && svelte-kit build",
    "package": "svelte-kit package",
    "preview": "svelte-kit preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint --ignore-path .gitignore .",
    "prepare": "npm run smui-theme-light && npm run smui-theme-dark",
    "smui-theme-light": "smui-theme compile static/smui.css -i src/theme",
    "smui-theme-dark": "smui-theme compile static/smui-dark.css -i src/theme/dark"
  },
  "devDependencies": {
    "@smui/slider": "^6.0.0-beta.13",
    "@smui/switch": "^6.0.0-beta.13",
    "@sveltejs/kit": "next",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "env-cmd": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "smui-theme": "^6.0.0-beta.13",
    "svelte": "^3.44.0",
    "svelte-check": "^2.2.6",
    "svelte-preprocess": "^4.9.4",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@sveltejs/adapter-node": "^1.0.0-next.60",
    "rimraf": "^3.0.2"
  },
  "description": "A simple web interface for the Govee API to control wifi smart bulbs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zachstence/govee-web.git"
  },
  "author": {
    "name": "zachstence",
    "url": "https://stence.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zachstence/govee-web/issues"
  },
  "homepage": "https://github.com/zachstence/govee-web#readme"
}
